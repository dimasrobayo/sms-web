<?php
define('FPDF_FONTPATH','font/');
require('pg_table.php');
include("comunes.php");
include ("conectar.php"); 

$pdf=new PDF('L');
$pdf->Open();
$pdf->AddPage();

$pdf->SetFillColor(255,255,255);
$pdf->SetFont('Arial','B',12);
$pdf->SetY(50);
$pdf->SetX(0);
$pdf->MultiCell(220,6,"Listado de Especie",0,C,0);//

$pdf->Ln();    

//T�tulos de las columnas
$header=array('Cod','Epiteto Especifico','Genero','Familia','División','Autor(es)');

//Colores, ancho de l�nea y fuente en negrita
    $pdf->SetFillColor(200,200,200);
    $pdf->SetTextColor(0);
    $pdf->SetDrawColor(0,0,0);
    $pdf->SetLineWidth(.2);
    $pdf->SetFont('Arial','B',10);
	
//Cabecera
    $w=array(10,60,50,50,50,50);
    for($i=0;$i<count($header);$i++)
        $pdf->Cell($w[$i],7,$header[$i],1,0,'C',1);
    $pdf->Ln();
	
//Restauraci�n de colores y fuentes

    $pdf->SetFillColor(224,235,255);
    $pdf->SetTextColor(0);
    $pdf->SetFont('Arial','B',7);

//Buscamos y listamos los clientes

$consulta = "select * from reino, division,familia, genero, especie where reino.cod_reino = division.cod_reino and familia.cod_division = division.cod_division and genero.cod_familia = familia.cod_familia and genero.cod_genero = especie.cod_genero order by especie.cod_especie";
$query = pg_query($consulta);
$total = ($query[autor_basionimo];)$query[autor_actual;
while ($row = pg_fetch_array($query))
        {
		//posicion celda, alto,contenido,bordes que mostramos(left,right top botton),0, alineacion izquierda
		//imprimo nombre, apellidos y localidad
		$pdf->Cell($w[0],5,$row["cod_especie"],'LRTB',0,'C');
		$pdf->Cell($w[1],5,$row["epiteto_especifico"],'LRTB',0,'L');
		$pdf->Cell($w[2],5,$row["nombre_genero"],'LRTB',0,'L');
		$pdf->Cell($w[3],5,$row["nombre_familia"],'LRTB',0,'L');
		$pdf->Cell($w[4],5,$row["nombre_division"],'LRTB',0,'L');
		$pdf->Cell($w[5],5,$row["autor_basionimo"],'LRTB',0,'L');
		$pdf->Ln(); //Este es para alinear los campos de la base de datos en el pdf.
        };
$pdf->Output();
?> 
